:syntax enable
:colorscheme monokai

:set magic
:set encoding=utf8
:set ffs=unix,dos,mac

:set autoread

:set ai "Auto indent
:set si "Smart indent
:set wrap "wrap lines

:set showmode
:set showmatch
:set ruler
:set number
:set showcmd
:filetype indent on
:set showmatch

:set tabstop=4
:set shiftwidth=4
:set softtabstop=4
:set expandtab

:set noswapfile
:set nobackup
:set nowb
